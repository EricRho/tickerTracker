<!DOCTYPE html>
<html ng-app='tickerTracker'>
<head>
  <title>TickerTracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!-- Bootstrap -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <!-- Select2 -->
  <link href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/css/select2.min.css" rel="stylesheet" />
  <script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/js/select2.min.js"></script>
  <script src='https://cdnjs.cloudflare.com/ajax/libs/angular-ui-select/0.12.0/select.min.js'></script>
  <link href='https://cdnjs.cloudflare.com/ajax/libs/angular-ui-select/0.12.0/select.min.css'>
</head>
<body>
  <div class='all'>
    <nav class='navbar navbar-default' role='navigation'>
      <nav class='container-fluid'>
        <div class='navbar-header'>
          <a class='navbar-brand' href='/'>Ticker Tracker</a>
        </div>
      </nav>
    </nav>
    <div ng-controller='clockCtrl' id='clock'>
      {{ clock | date:'medium'}}
    </div>
  </div>
<%= yield %>

</body>
</html>
