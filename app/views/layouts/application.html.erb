<!DOCTYPE html>
<html ng-app='tickerTracker'>
<head>
  <title>TickerTracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!-- Fonts -->
  <link href='http://fonts.googleapis.com/css?family=Poiret+One|Quicksand|Rokkitt|Exo|Dancing+Script|Raleway' rel='stylesheet' type='text/css'>
  <!-- Bootstrap -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

  <!-- Select2 -->
  <link href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/css/select2.min.css" rel="stylesheet" />
  <script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/js/select2.min.js"></script>
  <script src='https://cdnjs.cloudflare.com/ajax/libs/angular-ui-select/0.12.0/select.min.js'></script>
  <link href='https://cdnjs.cloudflare.com/ajax/libs/angular-ui-select/0.12.0/select.min.css'>

  <!-- For Angular Material -->
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.6/angular-animate.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.6/angular-aria.min.js"></script>
  <!-- <script src='https://cdnjs.cloudflare.com/ajax/libs/angular-material/1.0.2/angular-material.min.js'></script> -->
  <!-- <link href='https://cdnjs.cloudflare.com/ajax/libs/angular-material/1.0.2/angular-material.min.css'> -->
  <!-- <link href='https://cdnjs.cloudflare.com/ajax/libs/angular-material/1.0.2/angular-material.layouts.min.css'> -->
  <!-- <link rel="stylesheet" href="https://gitcdn.xyz/repo/angular/bower-material/master/angular-material.css"> -->
</head>

<body>
  <div class='all' ng-controller='someCtrl'>
    <nav class='navbar navbar-default' role='navigation'>
      <nav class='container-fluid'>
        <div class='navbar-header'>
          <a class='navbar-brand' href='/'>Ticker Tracker</a>
        </div>

 <!--         <ul class='nav navbar-nav navbar-right'>
          <% if user_signed_in? %>
            <li><a href='/users/edit'>Edit Account</a></li>
            <li>
              <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
            </li>
          <% else %>
            <li><a href='/users/sign_in'>Login</a></li>
            <li><a href='/users/sign_up'>Sign Up</a></li>
          <% end %>
        </ul> -->

        <ul class='nav navbar-nav navbar-right'>
          <% if user_signed_in? %>
            <li>
              <md-button class='md-raised md-ink-ripple'><%= link_to('Edit Account', edit_user_registration_path) %></md-button>
            </li>
            <li>
              <md-button class='md-raised md-ink-ripple'><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></md-button>
            </li>

          <% else %>
            <li>
              <!-- <md-button class='md-raised md-ink-ripple' href='/users/sign_in'>Login</md-button> -->
              <md-button class='md-raised md-ink-ripple'><%= link_to('Login', new_user_session_path) %></md-button>
            </li>
            <li>
              <!-- <md-button class='md-raised' href='/users/sign_up'>Sign Up</md-button> -->
              <md-button class='md-raised'><%= link_to('Sign Up', new_user_registration_path) %></md-button>
            </li>
          <% end %>
        </ul>

      </nav>
    </nav>
  </div>
<%= yield %>

</body>
</html>
