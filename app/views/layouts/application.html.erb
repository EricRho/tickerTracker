<!DOCTYPE html>
<html ng-app='tickerTracker'>
<head>
  <title>TickerTracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!-- Fonts -->
  <link href='http://fonts.googleapis.com/css?family=Poiret+One|Quicksand|Rokkitt|Exo|Dancing+Script|Raleway' rel='stylesheet' type='text/css'>
  <!-- Bootstrap -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

  <!-- Select2 -->
  <link href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/css/select2.min.css" rel="stylesheet" />
  <script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/js/select2.min.js"></script>
  <script src='https://cdnjs.cloudflare.com/ajax/libs/angular-ui-select/0.12.0/select.min.js'></script>
  <link href='https://cdnjs.cloudflare.com/ajax/libs/angular-ui-select/0.12.0/select.min.css'>
</head>

<body>
  <div class='all'>
    <nav class='navbar navbar-default' role='navigation'>
      <nav class='container-fluid'>
        <div class='navbar-header'>
          <a class='navbar-brand' href='/'>Ticker Tracker</a>
        </div>

        <p ng-controller='clockCtrl' id='clock'>
          {{ clock | date:'medium'}}
        </p>

        <ul class='nav navbar-nav navbar-right'>
          <% if user_signed_in? %>
            <li><a href='/users/edit'>Edit Account</a></li>
            <li>
              <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
            </li>
          <% else %>
            <li><a href='/users/sign_in'>Login</a></li>
            <li><a href='/users/sign_up'>Sign Up</a></li>
          <% end %>
        </ul>

      </nav>
    </nav>
  </div>
<%= yield %>

</body>
</html>
