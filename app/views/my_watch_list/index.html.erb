<h1>MyWatchList#index</h1>

<div class='row' class='container'>
  <div ng-controller='stocksCtrl'>

    <div id='findSymbol' class='small-4 columns'>
        <input ui-select2='select2Options' ng-model='newCompany' data-placeholder='Search Company' ng-required='true' style='width: 200px'>
    </div>

    <div ng-show='loading' id='loading'>
      Loading...
    </div>

    <div ng-show='error'>
    </div>

    <div class='medium-8 columns' id='tabinfo'>
      <div ng-controller='tabsCtrl'>
        <ul id='alltabs'>
          <li ng-repeat='tab in tabs' ng-class='{ active:isActiveTab(tab.url)}' ng-click='onClickTab(tab)' id='tabs'>
            {{ tab.title }}
          </li>
        </ul>
        <div id='mainView'>
          <div ng-include='currentTab'></div>
        </div>
      </div>
    </div>

    <!-- Tab One -->
    <script type='text/ng-template' id='one.tpl.html'>
      <div id='viewOne'>
        <h1>My Profile</h1>
        <p>User profile stuff goes here</p>
      </div>
    </script>

    <!-- Tab Two -->
    <script type='text/ng-template' id='two.tpl.html'>
      <div id='viewTwo'>
        <h1 id='tab1'>My Stocks</h1>
        <ul>
          <input type='text' ng-model='search' placeholder='Filter Your Stocks'>
          <li ng-repeat='stock in stocks | filter:search' id='stockList'>
            <strong>{{ stock.symbol }}</strong>
            {{ stock.name }}</br>
            <strong>Bid:</strong> {{ stock.bid }} </br>
            <strong>Ask:</strong> {{ stock.ask }} <br/>
            <strong>Change:</strong> {{ stock.change }} <br/>
            <strong>Percent Change:</strong> {{ stock.change_in_percent }} <br/>
              <div id='links' class='btn-group btn-group' roll='group'>
                <div class='btn-group' role='group'>
                  <button type='button' class='btn btn-default' ng-click='updateStock(stock.id, $index)'>Update</button>
                </div>
                <div class='btn-group' role='group'>
                  <button type='button' class='btn btn-danger' ng-click='deleteStock(stock.id, $index)' id='delete'>Delete</button>
                </div>
                <div class='btn-group' role='group'>
                  <button type='button' class='btn btn-info'>Graph</button>
                </div>
              </div>
          </li>
        </ul>
      </div>
    </script>

    <!-- Tab Three -->
    <script type='text/ng-template' id='three.tpl.html'>
      <div id='viewThree'>
        <h1>Feed</h1>
        <p>News Feed Here</p>
      </div>
    </script>

  </div>
</div>
